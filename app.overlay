/* CAN-FD Interface Device Tree Overlay */

/ {
    chosen {
        zephyr,canbus = &flexcan3;
    };
    
    aliases {
        can0 = &flexcan3;
    };
};

&flexcan3 {
    status = "okay";
    bus-speed = <1000000>;      /* 1 Mbps nominal bitrate */
    bus-speed-data = <2000000>; /* 2 Mbps data bitrate for FD */
};

